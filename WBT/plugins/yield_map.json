{
    "tool_name": "YieldMap",
    "exe": "yield_map",
    "short_description": "This tool can be used to create a segmented-vector polygon yield map from a set of harvester points.",
    "help": "This tool can be used to create a segmented-vector polygon yield map from a set of harvester points.",
    "toolbox": "Precision Agriculture",
    "parameters": [
        {
            "name": "Input Points",
            "flags": ["-i", "--inputFile"],
            "description": "Name of the input points shapefile.",
            "parameter_type": {"ExistingFile":{"Vector":"Points"}},
            "default_value": null,
            "optional": false
        },
        {
            "name": "Pass Field Name",
            "flags": ["-p", "--passFieldName"],
            "description": "Name of the attribute containing pass line ID.",
            "parameter_type": "String",
            "default_value": null,
            "optional": false
        },
        {
            "name": "Output Vector Polygons",
            "flags": ["-o", "--outputFile"],
            "description": "Name of the output polygon shapefile.",
            "parameter_type": {"NewFile":{"Vector":"Polygons"}},
            "default_value": null,
            "optional": false
        },
        {
            "name": "Swath Width",
            "flags": ["-w", "--width"],
            "description": "Pass swath width (m).",
            "parameter_type": "Float",
            "default_value": "6.096",
            "optional": true
        },
        {
            "name": "Max Change In Heading (degrees)",
            "flags": ["-m", "--maxChangeInHeading"],
            "description": "Max change in heading.",
            "parameter_type": "Float",
            "default_value": "25.0",
            "optional": true
        }
    ]
}